import { createAnimations } from '@tamagui/animations-react-native'
import { createInterFont } from '@tamagui/font-inter'
import { shorthands } from '@tamagui/shorthands'
import { createTamagui } from 'tamagui'

// Create our own themes and tokens since @tamagui/theme-base is deprecated
const tokens = {
  size: {
    $0: 0,
    $1: 4,
    $2: 8,
    $3: 12, 
    $4: 16,
    $5: 20,
    $6: 24,
    $8: 32,
    $10: 40,
    $12: 48,
    $16: 64,
    $20: 80,
    $24: 96,
    $32: 128,
    $40: 160,
    $50: 200,
  },
  space: {
    $0: 0,
    $1: 4,
    $2: 8,
    $3: 12, 
    $4: 16,
    $5: 20,
    $6: 24,
    $8: 32,
    $10: 40,
    $12: 48,
    $16: 64,
    $20: 80,
    $24: 96,
  },
  radius: {
    $0: 0,
    $1: 3,
    $2: 5,
    $3: 8,
    $4: 10,
    $5: 15,
    $6: 20,
    $full: 999,
  },
  zIndex: {
    $0: 0,
    $1: 100,
    $2: 200,
    $3: 300,
    $4: 400,
    $5: 500,
  },
  color: {
    white: '#ffffff',
    black: '#000000',
    blue10: '#3371FF',
    gray5: '#E5E5E5',
    red10: '#FF4D4F',
  }
};

// Create basic light and dark themes
const themes = {
  light: {
    background: tokens.color.white,
    color: tokens.color.black,
    borderColor: tokens.color.gray5,
    blue10: tokens.color.blue10,
    gray5: tokens.color.gray5,
    red10: tokens.color.red10,
  },
  dark: {
    background: '#1A1A1A',
    color: tokens.color.white,
    borderColor: '#2A2A2A',
    blue10: tokens.color.blue10,
    gray5: '#2A2A2A',
    red10: tokens.color.red10,
  },
};

const animations = createAnimations({
  bouncy: {
    type: 'spring',
    damping: 10,
    mass: 0.9,
    stiffness: 100,
  },
  lazy: {
    type: 'spring',
    damping: 20,
    stiffness: 60,
  },
  quick: {
    type: 'spring',
    damping: 20,
    mass: 1.2,
    stiffness: 250,
  },
})

const headingFont = createInterFont()
const bodyFont = createInterFont()

const config = createTamagui({
  animations,
  defaultTheme: 'light',
  shouldAddPrefersColorThemes: false,
  themeClassNameOnRoot: false,
  shorthands,
  fonts: {
    heading: headingFont,
    body: bodyFont,
  },
  themes,
  tokens,
  media: {
    xs: { maxWidth: 660 },
    sm: { maxWidth: 800 },
    md: { maxWidth: 1020 },
    lg: { maxWidth: 1280 },
    xl: { maxWidth: 1420 },
    xxl: { maxWidth: 1600 },
    gtXs: { minWidth: 660 + 1 },
    gtSm: { minWidth: 800 + 1 },
    gtMd: { minWidth: 1020 + 1 },
    gtLg: { minWidth: 1280 + 1 },
    short: { maxHeight: 820 },
    tall: { minHeight: 820 },
  },
})

export type AppConfig = typeof config

declare module 'tamagui' {
  // overrides TamaguiCustomConfig so your custom types
  // work everywhere you import `tamagui`
  interface TamaguiCustomConfig extends AppConfig {}
}

export default config
